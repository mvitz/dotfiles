[user]
  name = Michael Vitz
  email = vitz.michael@googlemail.com
  signingkey = 89512794
[core]
  autocrlf = input
  editor = vi
  excludesfile = ~/.gitignore
[mergetool]
  tool = vimdiff
  keepBackup = false
[color]
  diff = auto
  status = auto
  branch = auto
[color "status"]
  changed = yellow
  added = green
  untracked = red
[alias]
  st = status
  di = diff
  ds = diff --staged
  ci = commit
  co = checkout
  fix = commit --amend -C HEAD
  br = branch
  brs = for-each-ref --sort='-authordate:iso8601' --format=' %(color:green)%(authordate:iso8601)%09%(color:white)%(refname:short)' refs/heads
  cob = checkout -b
  rb = rebase
  log-me = "!git log --author `git config user.email` --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr)%Creset'"
  log-nice = log --graph --decorate --pretty=oneline --abbrev-commit --all
  log-fancy = log --graph --pretty=format:'%Cred%h %C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --all
  standup = "!git log --author `git config user.email` --since yesterday --pretty=short"
  ignored = ls-files --others -i --exclude-standard
  wipe = reset --hard HEAD
  praise = blame
  ready = rebase -i @{u}
  unstage = reset HEAD --
  restore = checkout --
  please = push --force-with-lease
  stsh = stash --keep-index
  staash = stash --include-untracked
  staaash = stash --all
  shorty = status --short --branch
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  publish = "!git push -u origin $(git branch-name)"
[push]
  default = simple
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[merge]
  ff = false
[pull]
  rebase = preserve
[fetch]
  prune = true
[commit]
  template = ~/.gitcommit
  gpgsign = true
[diff]
  compactionHeuristic = true
[interactive]
  diffFilter = diff-so-fancy
[pager]
  log = diff-so-fancy | less
  show = diff-so-fancy | less
  diff = diff-so-fancy | less

