[user]
  name = Michael Vitz
  email = vitz.michael@googlemail.com
  signingkey = 0xDF21E518FE76512B
[core]
  autocrlf = input
  editor = vi
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -R
  #precomposeunicode = true
  quotepath = false
[mergetool]
  tool = vimdiff
  keepBackup = false
[color]
  diff = auto
  status = auto
  branch = auto
[color "status"]
  changed = yellow
  added = green
  untracked = red
[alias]
  st = status
  di = diff
  ds = diff --staged
  ci = commit
  co = checkout
  fix = commit --amend -C HEAD
  br = branch
  brs = for-each-ref --sort='-authordate:iso8601' --format=' %(color:green)%(authordate:iso8601)%09%(color:white)%(refname:short)' refs/heads
  cob = checkout -b
  rb = rebase
  log-me = "!git log --author `git config user.email` --date=human --pretty=format:'%Cred%h%Creset %s %Cgreen(%ad)%Creset'"
  log-nice = log --graph --decorate --pretty=oneline --abbrev-commit --all
  log-fancy = log --graph --date=human --pretty=format:'%Cred%h %C(yellow)%d%Creset %s %Cgreen(%ad) %C(cyan)<%an>%Creset' --all
  standup = "!git log --author `git config user.email` --since yesterday --pretty=short --all"
  ignored = ls-files --others -i --exclude-standard
  wipe = reset --hard HEAD
  praise = blame
  ready = rebase -i @{u}
  unstage = reset HEAD --
  restore = checkout --
  please = push --force-with-lease
  stsh = stash --keep-index
  staash = stash --include-untracked
  staaash = stash --all
  shorty = status --short --branch
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  publish = "!git push -u origin $(git branch-name)"
  patch = !git --no-pager diff --no-color
[push]
  default = simple
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[merge]
  ff = false
[pull]
  rebase = preserve
[fetch]
  prune = true
[commit]
  gpgsign = true
  template = ~/.gitcommit
  verbose = true
[diff]
  compactionHeuristic = true
[pager]
  diff = diff-so-fancy | less --tabs=4 -R --pattern '^(Date|added|deleted|modified|renamed): '
[rebase]
  autostash = true
