  signingkey = 0xDF21E518FE76512B
[core]
  autocrlf = input
  editor = nvim
  pager = delta
  quotepath = false
[mergetool]
  tool = nvimdiff
  keepBackup = false
[color]
  branch = auto
  diff = auto
  status = auto
[color "status"]
  added = green
  changed = yellow
  untracked = red
[alias]
  br = branch
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  ci = commit
  co = checkout
  cob = checkout -b
  di = diff
  ds = diff --staged
  fix = commit --amend -C HEAD
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
  history = log --follow --patch
  log-fancy = log --graph --date=human --pretty=format:'%Cred%h %C(yellow)%d%Creset %s %Cgreen(%cd) %C(cyan)<%an>%Creset' --all
  please = push --force-with-lease
  praise = blame
  publish = "!git push -u origin $(git branch-name)"
  st = status
  tmp = commit --message 'Temp'
  unstage = reset HEAD --
[push]
  default = simple
[merge]
  ff = false
[pull]
  rebase = merges
[fetch]
  prune = true
[commit]
  gpgsign = true
  verbose = true
[diff]
  compactionHeuristic = true
  noprefix = true
[rebase]
  autosquash = true
  autostash = true
  updateRefs = true
[rerere]
  enabled = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
[includeIf "gitdir:~/Development/innoq/"]
  path = ~/.dotfiles/git/gitconfig_innoq
[includeIf "gitdir:~/Projects/"]
  path = ~/.dotfiles/git/gitconfig_innoq
[init]
  defaultBranch = main
[advice]
  skippedCherryPicks = false
[help]
  autoCorrect = prompt
[delta]
  line-numbers = true
  navigate = true
