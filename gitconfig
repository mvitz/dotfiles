[core]
  autocrlf = input
  editor = vi
  quotepath = false
[mergetool]
  tool = vimdiff
  keepBackup = false
[color]
  branch = auto
  diff = auto
  status = auto
[color "status"]
  added = green
  changed = yellow
  untracked = red
[alias]
  br = branch
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  ci = commit
  co = checkout
  cob = checkout -b
  di = diff
  ds = diff --staged
  fix = commit --amend -C HEAD
  history = log --follow --patch --patch
  log-fancy = log --graph --date=human --pretty=format:'%Cred%h %C(yellow)%d%Creset %s %Cgreen(%ad) %C(cyan)<%an>%Creset' --all
  please = push --force-with-lease
  praise = blame
  publish = "!git push -u origin $(git branch-name)"
  st = status
  tmp = commit --message 'Temp'
  unstage = reset HEAD --
[push]
  default = simple
[merge]
  ff = false
[pull]
  rebase = merges
[fetch]
  prune = true
[commit]
  gpgsign = true
  verbose = true
[diff]
  compactionHeuristic = true
  noprefix = true
[rebase]
  autostash = true
[rerere]
  enabled = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
